<head>
<style>
    .grid-container {
      display: grid;
      grid-template-columns: repeat(7, 1fr);
      grid-template-rows: repeat(24, 1fr);
      gap: 1px; /* Optional: Abstand zwischen den Zellen */
    }
    .grid-item {
      border-left: 1px solid #ccc;
      border-bottom: 1px solid #ccc;

      padding: 29.5px;
      text-align: center;
    }
    .timeblock-grid {
      grid-template-columns: repeat(7, 1fr);
    }
  </style>
</head>

<p style="color: green"><%= notice %></p>

<div id="timeblocks">
  <div class="timeblock-grid">
      <% @timeblocks.each do |timeblock| %>
        <%= render timeblock %>
      <% end %>
  </div>
  
<%= link_to "New timeblock", new_timeblock_path %>
  <div class="grid-container">
  <% (0..23).each do |hour| %>
    <% (0..6).each do |day| %>
      <div class="grid-item">
        <% @timeblocks.each do |timeblock| %>
          <% if timeblock.repeatOnDay == day %>
            <%= render timeblock %>
          <% else %>
            <%= "" %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>

</div>

